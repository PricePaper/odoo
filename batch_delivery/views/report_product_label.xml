<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="product_labels_template">
            <t t-call="web.basic_layout">
                <div class="page">
                    <div class="col-xs-4" style="padding:0;">
                      <t t-set="qty" t-value="int(line[0].reserved_availability)"/>
                      <t t-if="line[0].sale_line_id">
                      <t t-if="line[0].sale_line_id.order_id.quick_sale">
                        <t t-set="qty" t-value="int(line[0].quantity_done)"/>
                      </t>
                      </t>
                        <t t-foreach="range(0,qty)" t-as="int(count)">

                          <div style="width:384px;height:192px;">

                            <div style="width:384px;height:15%;">
                                  <div t-field="line[0].product_id.default_code"
                                              style="float: left;width: 55%;font-size: 16px;max-width:50%;white-space:nowrap;overflow: hidden;font-weight: bold;"/>
                                  <div t-field="line[0].product_uom"
                                              style="float: left;width: 20%;font-size: 16px;font-weight: bold;text-align: right;"/>
                                  <div t-field="line[0].product_id.property_stock_location.name"
                                              style="float:left;width: 25%;font-size: 16px;text-align: right;padding-left: 5px;font-weight: bold;"/>
                            </div>

                            <div style="width:384px;height:15%;">
                                <div t-field="line[0].picking_id.partner_id.name"
                                            style="display: inline-block;float:left;width:75%;font-size:24px;max-width:75%;white-space:nowrap;overflow: hidden;font-weight: bold;">
                                </div>
                                <div t-field="line[0].picking_id.partner_id.customer_code"
                                            style="text-overflow: clip;display: inline-block;float:left;width:25%;font-size:14px;text-align: right;padding-left: 5px;font-weight: bold;">
                                </div>
                            </div>

                            <div style="width:384px;height:15%;text-align:left;float:left;">
                                <t t-if="line[0].picking_id.partner_id.street">
                                    <div t-field="line[0].picking_id.partner_id.street" style="text-align:left;font-size:14px;"/>
                                </t>
                            </div>

                            <div style="width:384px;height:15%;text-align:left;float:left;">
                                  <div t-field="line[0].product_id.name" style="text-align:left;font-size:14px;"/>
                            </div>

                            <!-- <t t-set="barcode" t-value="'%s'%(line[0].sale_line[0]_id.id)"/> -->
                            <div style="width:384px;height:25%;float:left;">

                              <div style="text-align:center; vertical-align:middle;padding: 39px;" class="col-xs-5">
                                  <div style="width:100%;height:20%;"/>

                                  <!-- <img
                                          t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', barcode, 600, 150)"
                                          style="width:100%;height:20%;"/>
                                  <span t-esc="barcode"/> -->

                              </div>

                            </div>

                            <div style="width:384px;height:15%;">
                                <div t-field="line[0].sale_line_id.order_id.name"
                                    style="display:block;float:left;width:40%;font-size:14px;" />
                                <div style="float:left;font-size:14px;width:30%;">
                                    <t t-if="line[1]">
                                        <span t-esc="line[1].name"/>
                                    </t>
                                </div>
                                <div t-field="line[0].picking_id.scheduled_date" t-options='{"widget": "date"}'
                                          style="float:right;width:30%;font-size:14px;text-align: right;padding-left: 5px"/>
                            </div>
                          </div>
                        </t>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_product_label">
          <t t-set="pickinglist" t-value="get_product_labels(docs)"/>
          <t t-foreach="pickinglist" t-as="picking">
              <t t-foreach="picking" t-as="location">
                  <t t-foreach="location[1]" t-as="line">
                    <t t-call="batch_delivery.product_labels_template"/>
                </t>
            </t>
          </t>
        </template>

        <template id="report_batch_product_label">
            <t t-set="pickinglist" t-value="get_product_labels(docs)"/>
            <t t-foreach="pickinglist" t-as="picking">
                <t t-foreach="picking" t-as="location">
                    <t t-foreach="location[1]" t-as="line">
                    <t t-call="batch_delivery.product_labels_template"/>
                </t>
            </t>
            </t>
        </template>
    </data>
</odoo>
