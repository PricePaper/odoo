<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="product_labels_template">
            <t t-call="web.basic_layout">
                <div class="page">
                    <div class="col-xs-4" style="padding:0;">
                        <t t-foreach="range(0,int(line[0].reserved_availability))" t-as="int(count)">
                          <table style="width:384px;height:192px;" class="table">
                              <tbody>
                                  <tr style="border-top:hidden;border-bottom:hidden;height:15%;">
                                      <td style="padding: 0px;">
                                          <strong t-field="line[0].product_id.default_code"
                                                      style="float: left;width: 60%;font-size: 14px;max-width:60%;white-space:nowrap;overflow: hidden;"/>
                                          <strong t-field="line[0].product_uom"
                                                      style="float: left;width: 20%;font-size: 14px;"/>
                                          <strong t-field="line[0].product_id.property_stock_location.name"
                                                      style="float: right;width: 20%;font-size: 14px;text-align: right;"/>
                                      </td>
                                  </tr>
                                  <tr style="border-top:hidden;border-bottom:hidden;height:15%;">
                                    <td style="padding: 0px;">
                                        <strong t-field="line[0].picking_id.partner_id.name"
                                                    style="float:left;width:80%;font-size:24px;max-width:80%;white-space:nowrap;overflow: hidden;"/>
                                        <strong t-field="line[0].picking_id.partner_id.customer_code"
                                                    style="float:right;width:20%;font-size:14px;text-align: right;"/>
                                    </td>
                                  </tr>
                                  <tr style="border-top:hidden;border-bottom:hidden;height:15%;">
                                    <td style="padding: 0px;max-width:80px;white-space:nowrap;overflow: hidden;">
                                        <t t-if="line[0].picking_id.partner_id.street">
                                            <span t-field="line[0].picking_id.partner_id.street"
                                                      style="float:left;font-size:14px;"/>
                                        </t>
                                    </td>
                                  </tr>
                                  <tr style="border-top:hidden;height:20%;font-size:14px;">
                                    <td style="padding: 0px;">
                                        <span t-field="line[0].product_id.name"/>
                                    </td>
                                  </tr>
                                  <!-- <t t-set="barcode" t-value="'%s'%(line[0].sale_line_id.id)"/> -->
                                  <tr style="border-top:hidden;height:20%;">
                                      <td style="text-align:center; vertical-align:middle;padding: 0px;" class="col-xs-5">
                                          <div style="width:100%;height:20%;"/>
                                          <!-- <img
                                                  t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', barcode, 600, 150)"
                                                  style="width:100%;height:20%;"/>
                                          <span t-esc="barcode"/> -->
                                      </td>
                                  </tr>
                                  <tr style="border-top:hidden;height:15%;padding: 0px;">
                                      <td style="padding: 0px;">
                                          <span t-field="line[0].sale_line_id.order_id.name"
                                              style="display:block;float:left;width:40%;font-size:14px;" />
                                          <t t-if="line[1]">
                                              <span t-esc="line[1].name"
                                                        style="float:left;font-size:14px;width:30%;"/>
                                          </t>
                                          <span t-field="line[0].picking_id.scheduled_date" t-options='{"widget": "date"}'
                                                  style="float:right;width:30%;font-size:14px;text-align: right;"/>
                                      </td>
                                  </tr>
                              </tbody>
                          </table>
                        </t>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_product_label">
            <t t-set="location_list" t-value="get_product_labels(docs)"/>
            <t t-foreach="location_list" t-as="location">
                <t t-foreach="location[1]" t-as="line">
                    <t t-call="batch_delivery.product_labels_template"/>
                </t>
            </t>
        </template>

        <template id="report_batch_product_label">
            <t t-set="location_list" t-value="get_product_labels(docs)"/>
            <t t-foreach="location_list" t-as="location">
                <t t-foreach="location[1]" t-as="line">
                    <t t-call="batch_delivery.product_labels_template"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
