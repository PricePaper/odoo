<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherit_sale_order_form_view_batch" model="ir.ui.view">
            <field name="name">inherited.sale.order.form.view.batch</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="have_prive_lock" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom']" position="after">
                    <field name="lot_id"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/form/group[1]/group[1]/field[@name='price_unit']" position="before">
                    <field name="lot_id"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/form/group[1]/group[1]/field[@name='price_unit']" position="replace">
                     <label for="price_unit"/>
                    <div class="o_row">
                        <field name="price_unit" attrs="{'readonly':[('price_lock', '=', True)]}"/>
                      <field name="info" widget="price_lock" string="Lock Info" attrs="{'invisible':[('price_lock', '=', False)]}"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="info" widget="price_lock" string="Lock Info" attrs="{'column_invisible':[('parent.have_prive_lock', '=', False)]}"/>
                </xpath>



            </field>
        </record>






    </data>
</odoo>
