<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_backorder_confirmation_inhrt" model="ir.ui.view">
        <field name="name">stock_backorder_confirmation_inhrt</field>
        <field name="model">stock.backorder.confirmation</field>
        <field name="inherit_id" ref="stock.view_backorder_confirmation"/>
        <field name="arch" type="xml">

            <xpath expr="//footer/button[@name='process']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//footer/button[@name='process_cancel_backorder']" position="attributes">
                <attribute name="string">Submit</attribute>
            </xpath>
        </field>
    </record>
</odoo>
