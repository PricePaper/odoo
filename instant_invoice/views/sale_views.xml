<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
       <record id="quick_sale_view_order_form" model="ir.ui.view">
           <field name="name">quick.sale.sale.order.form</field>
           <field name="model">sale.order</field>
           <field name="inherit_id" ref="sale.view_order_form"/>
           <field name="arch" type="xml">
               <xpath expr="//header" position='inside'>
                   <button name="action_quick_sale" type="object" string="Quick Sale" class='oe_highlight' attrs="{'invisible': [('state','=','sale')]}"/>
                   <button name="action_print_invoice" type="object" string="Print Invoice" attrs="{'invisible': [('state','!=','sale')]}"/>
                </xpath>
           </field>
       </record>
    </data>
</odoo>

